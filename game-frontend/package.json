{
  "name": "time-of-changes",
  "version": "0.1.4",
  "description": "Time of Changes Game",
  "main": "./app/main.js",
  "scripts": {
    "build:js": "node_modules/typescript/bin/tsc",
    "start:tsc": "node_modules/typescript/bin/tsc --watch",
    "build": "ELECTRON_ENV=prod electron-builder -mwl",
    "start": "ELECTRON_ENV=dev electron ./app/main.js",
    "dist": "ELECTRON_ENV=prod npm run build"
  },
  "author": "Dominik Matt <mail@matt-dominik.at>",
  "license": "ISC",
  "dependencies": {
    "@types/bluebird": "^3.5.29",
    "@types/debug": "4.1.5",
    "@types/socket.io-client": "^1.4.32",
    "@types/node": "^12.12.17",
    "babylonjs": "^4.0.3",
    "babylonjs-inspector": "^4.0.3",
    "node": "13.3.0",
    "socket.io": "^2.4.0",
    "socket.io-client": "^2.3.0"
  },
  "devDependencies": {
    "electron": "7.1.5",
    "electron-builder": "^21.2.0",
    "electron-packager": "^14.1.1",
    "typescript": "^3.7.3"
  },
  "build": {
    "appId": "time-of-changes",
    "artifactName": "toc-nightly.${ext}",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 0
        },
        {
          "x": 240,
          "y": 0,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": "portable"
    }
  },
  "protocols": [
    {
      "name": "tocgame",
      "role": "Viewer",
      "schemes": [
        "tocgame"
      ]
    }
  ]
}
