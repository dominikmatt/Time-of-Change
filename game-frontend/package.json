{
  "name": "time-of-changes",
  "version": "0.1.4",
  "description": "Time of Changes Game",
  "main": "./app/main.js",
  "scripts": {
    "build": "tsc",
    "start": "ELECTRON_ENV=dev electron ./app/main.js",
    "dist": "ELECTRON_ENV=prod build",
    "dist:osx": "electron-packager . --overwrite --platform=darwin --arch=x64 --prune=true --out=dist",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Dominik Matt <mail@matt-dominik.at>",
  "license": "ISC",
  "dependencies": {
    "@types/bluebird": "^3.5.24",
    "@types/debug": "0.0.31",
    "@types/socket.io-client": "^1.4.32",
    "babylonjs": "^3.3.0",
    "babylonjs-inspector": "^3.3.0",
    "node": "10.11.0",
    "socket.io": "^2.1.1",
    "socket.io-client": "^2.1.1",
    "toc-assets": "git+ssh://git@gitlab.its-doern.at/toc/assets.git",
    "typescript": "^3.0.3"
  },
  "devDependencies": {
    "electron": "^1.7.9",
    "electron-builder": "^19.49.0",
    "electron-packager": "^12.2.0"
  },
  "build": {
    "appId": "time-of-changes",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 0
        },
        {
          "x": 240,
          "y": 0,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": "portable"
    }
  },
  "protocols": [
    {
      "name": "tocgame",
      "role": "Viewer",
      "schemes": [
        "tocgame"
      ]
    }
  ]
}
